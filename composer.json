{
    "name": "realtreasury/treasury-tech-portal",
    "description": "WordPress plugin for treasury technology discovery",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=WordPress .",
        "cbf": "phpcbf --standard=WordPress .",
        "analyze": "phpstan analyse"
    },
    "autoload": {
        "psr-4": {
            "TreasuryTechPortal\\": "includes/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
